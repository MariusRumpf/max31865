{
  "name": "max31865",
  "version": "1.0.1",
  "description": "Interface with MAX31865 thermocouple amplifiers",
  "main": "index.js",
  "scripts": {
    "lint": "eslint --ignore-path .gitignore .",
    "test:unit": "NODE_ENV=test jest",
    "test": "npm run lint && npm run test:unit"
  },
  "engines": {
    "node": ">=10.15.1"
  },
  "keywords": [
    "max31865",
    "thermocouple",
    "iot"
  ],
  "author": "Marius Rumpf",
  "license": "MIT",
  "dependencies": {
    "spi-device": "^2.0.7"
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "jest": "^24.7.1"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "jest": true
    },
    "rules": {
      "no-bitwise": "off",
      "no-param-reassign": "off",
      "no-console": "off"
    },
    "extends": "airbnb-base"
  },
  "jest": {
    "moduleFileExtensions": [
      "js"
    ],
    "testMatch": [
      "**/tests/**/*.spec.js"
    ]
  }
}
